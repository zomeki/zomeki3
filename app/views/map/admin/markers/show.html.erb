<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :state %></th>
    <td><%= @item.status.try(:name) %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :title %></th>
    <td><%= @item.title %></td>
  </tr>
</table>

<%- if @content.category_types.present? -%>
<%= render 'gp_category/admin/_partial/categories/view', item: @item, category_types: @content.category_types %>
<%- end -%>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :latitude %></th>
    <td><%= @item.latitude %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :longitude %></th>
    <td><%= @item.longitude %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :window_text %></th>
    <td><%=simple_format @item.window_text %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :file %></th>
    <td>
      <%- unless @item.files.empty? -%>
      <%= image_tag file_content_map_marker_path(content: @content, id: @item.id), width: 100 %>
      <%- else -%>
      なし
      <%- end -%>
    </td>
  </tr>
</table>
