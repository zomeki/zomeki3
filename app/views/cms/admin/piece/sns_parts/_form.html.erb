<p class="form">基本情報</p>

<table class="show">
  <%= piece_base_form f, container: :tr %>
</table>

<br />
<p class="form">詳細設定</p>

<table class="show">
  <tr>
    <th>表示種別</th>
    <td>
      <%- in_settings = instance_variable_get("@#{f.object_name}").in_settings -%>
      <%- @item.class::SETTING_KEYS.each do |key| %>
      <%- unless key.to_s == 'mixi_data_key' %>
      <%= check_box_tag "item[in_settings][#{key}]", '1', in_settings[key] %> <%= label_tag "item[in_settings][#{key}]", @item.class::SETTING_NAMES[key] %>
      <%- end -%>
      <%- end -%>
    </td>
  </tr>
  <tr>
    <th>mixiチェックキー</th>
    <td><%= text_field_tag 'item[in_settings][mixi_data_key]', in_settings['mixi_data_key'], size: 50 %></td>
  </tr>
</table>

<%= creator_form f %>
