<%- if @item.name == 'common_ssl' -%>
<table class="show">
  <tr>
    <th><%= @site.locale :in_setting_site_common_ssl %></th>
    <td><%= f.radio_buttons :in_setting_site_common_ssl, @item.class.configs[:common_ssl][:options] %></td>
  </tr>
</table>
<%- end -%>

<%- if @item.name == 'admin_mail_sender' -%>
<table class="show">
  <tr>
    <th><%= @site.locale :in_setting_site_admin_mail_sender %></th>
    <td><%= f.text_field :in_setting_site_admin_mail_sender, class: 'name' %></td>
  </tr>
</table>
<%- end -%>

<%- if @item.name == 'allowed_attachment_type' -%>
<table class="show">
  <tr>
    <th><%= @site.locale :in_setting_site_allowed_attachment_type %></th>
    <td>
      <div>例: gif,jpg,png,pdf,doc,docx,xls,xlsx,ppt,pptx,odt,ods,odp</div>
      <%= f.text_field :in_setting_site_allowed_attachment_type, style: 'width: 500px; ime-mode:disabled;' %>
    </td>
  </tr>
</table>
<%- end -%>

<%- if @item.name == 'file_upload_max_size' -%>
<table class="show">
  <tr>
    <th><%= @site.locale :in_setting_site_file_upload_max_size %></th>
    <td><%= f.text_field :in_setting_site_file_upload_max_size %> MB</td>
  </tr>
  <tr>
    <th><%= @site.locale :in_setting_site_extension_upload_max_size %></th>
    <td>
      <%= f.text_area :in_setting_site_extension_upload_max_size, size: '100x10' %>
      <div>
        例：jpgファイルは1MB、gifファイルは5MBをアップロードサイズ上限として設定する。<br />
        jpg, 1<br />
        gif, 5
      </div>
    </td>
  </tr>
</table>
<%- end -%>

<%- if @item.name == 'link_check' -%>
<table class="show">
  <tr>
    <th><%= @site.locale :in_setting_site_link_check %></th>
    <td><%= f.radio_buttons :in_setting_site_link_check, @item.class.configs[:link_check][:options] %></td>
  </tr>
  <tr>
    <th><%= @site.locale :in_setting_site_link_check_hour %></th>
    <td>
      <%= f.text_field :in_setting_site_link_check_hour, class: 'number' %> 時
      <span style="margin-left: 10px;">0-23時を指定。使用しない場合は空白</span>
    </td>
  </tr>
  <tr>
    <th><%= @site.locale :in_setting_site_link_check_exclusion %><br/ >（改行区切り）</th>
    <td>
      <%= f.text_area :in_setting_site_link_check_exclusion, rows: 10 %>
      <p>例：http://example.com/</p>
    </td>
  </tr>
</table>
<%- end -%>

