<div class="navi">
<% ancestors = @parent.ancestors; ancestors.each_with_index do |c, k| %>
<%= link_to h(c.name), sys_groups_path(c) %>
<% if ancestors.size != k + 1 %><span class="separator">&gt;</span><% end %>
<% end %>
</div>

<div class="actionMenu">
<%= action_menu :index, { controller: :groups, action: :index } %>
<%= action_menu :show %>
<%= action_menu :edit    if @item && @item.editable? %>
<%= action_menu :destroy if @item && @item.deletable? %>
</div>
