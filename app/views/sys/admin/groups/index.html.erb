<div class="crudTree">
<div class="tree">
  <%- if @parent -%>
  <p>
    <%= link_to :show, { action: :show, parent: @parent.parent_id, id: @parent } %>
    <%= @parent.name %>
  </p>
  <%- end -%>
  <div class="links">
    <ul class="root">
      <%= render 'groups', groups: @groups %>
    </ul>
  </div>
</div>

<div class="content">
<%= render 'users', users: @users if @parent %>
</div>

<div class="footer"></div>
</div>

<script type="text/javascript">
$(function() {
  $('.tree').simpleTree();
});
</script>
