<p class="form">基本情報</p>

<table class="show">
  <%- if Core.user.root? -%>
  <tr>
    <th><%=t 'activerecord.models.cms/site' %></th>
    <td><%= @item.sites.map(&:name).join('，') %></td>
  </tr>
  <%- end -%>
  <tr>
    <th><%= @item.class.human_attribute_name :state %></th>
    <td><%= @item.state_text %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :parent_id %></th>
    <td><%= @item.parent.name if @item.parent %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :code %></th>
    <td><%= @item.code %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :name %></th>
    <td><%= @item.name %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :name_en %></th>
    <td><%= @item.name_en %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :sort_no %></th>
    <td><%= @item.sort_no %></td>
  </tr>
</table>

<p class="form">グループ設定</p>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :address %></th>
    <td><%= @item.address %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :tel %></th>
    <td><%= @item.tel %> <%= @item.tel_attend %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :fax %></th>
    <td><%= @item.fax %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :email %></th>
    <td><%= @item.email %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :note %></th>
    <td><%= @item.note %></td>
  </tr>
</table>
