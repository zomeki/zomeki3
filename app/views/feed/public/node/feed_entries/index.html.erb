<div class="contentPortalEntries">

<div class="feed">
  <%= link_to 'RSS' , "index.rss" , :class => 'feedRss' %>
  <%= link_to 'Atom', "index.atom", :class => 'feedAtom' %>
</div>

<div class="entries">
  <% @items.each_with_index do |item, idx| %>
  <% if item[:date] %><%== "</ul>" if idx != 0  %>
  <%== %Q(<h2 class="date">#{item[:date]}</h2><ul>).html_safe if item[:date] %>
  <% end %><li><%= entry_replace(item[:entry], @content.list_style, @content.date_style) -%></li><% end %>
  <%== "</ul>" if @entries.size > 0 %>
</div>

<%= paginate @entries %>

</div>
