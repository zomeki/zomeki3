<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :state %></th>
    <td><%= @item.state_text %></td>
  </tr><tr>
    <th><%= @item.class.human_attribute_name :id %></th>
    <td><%= @item.id %></td>
  </tr>
  <% if uri = @item.link_alternate %>
  <tr>
    <th><%= @item.class.human_attribute_name :link_alternate %></th>
    <td><div><%= link_to(uri, uri, :target => '_blank') %></div></td>
  </tr>
  <% end %>
  <tr>
    <th><%= @item.class.human_attribute_name :title %></th>
    <td><%= @item.title %></td>
  </tr><tr>
    <th>分類</th>
    <td><%=hbr @item.categories %></td>
  </tr>
  <% if uri = @item.image_uri %>
  <tr>
    <th><%= @item.class.human_attribute_name :image_uri %></th>
    <td><div><%= link_to(uri, uri, :target => '_blank') %></div></td>
  </tr>
  <% end %>
  <tr>
    <th>概要</th>
    <td><%=hbr @item.summary %>
    </td>
  </tr>
</table>
