<%= render 'shared/admin/content/settings/form', f: f, item: @item -%>

<%- if @item.name == 'category_type_style' -%>
<table class="show">
  <tr>
    <th><%= GpArticle::Doc.model_name.human %>表示形式</th>
    <td>
      <%= link_to '置き換えテキストを確認する', "#", class: 'show_dialog' %>
      <%= text_area_tag 'item[extra_values][category_type_doc_style]', @item.extra_values[:category_type_doc_style], size: '100x10' %>
    </td>
  </tr>
  <tr>
    <th><%= GpArticle::Doc.model_name.human %>表示件数</th>
    <td>
      <%= text_field_tag 'item[extra_values][category_type_docs_number]', @item.extra_values[:category_type_docs_number], class: 'number' %>
    </td>
  </tr>
</table>
<%- end -%>

<%- if @item.name == 'category_style' -%>
<table class="show">
  <tr>
    <th><%= GpArticle::Doc.model_name.human %>表示形式</th>
    <td>
      <%= link_to '置き換えテキストを確認する', "#", class: 'show_dialog' %>
      <%= text_area_tag 'item[extra_values][category_doc_style]', @item.extra_values[:category_doc_style], size: '100x10' %>
