<%= init_ckeditor %>
<span class="note">※は必須項目です。</span>

<p class="form">基本情報</p>

<table class="show">
  <tr>
    <th><%= f.label :state %></th>
    <td><%= f.collection_radio_buttons :state, @item.class.state_options, :last, :first %></td>
  </tr>
  <tr>
    <th><%= f.label :name %></th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th><%= f.label :title %></th>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <th><%= f.label :sitemap_state %></th>
    <td><%= f.collection_radio_buttons :sitemap_state, @item.class.sitemap_state_options, :last, :first %></td>
  </tr>
  <tr>
    <th><%= f.label :docs_order %></th>
    <td><%= f.select :docs_order, @item.class.docs_order_options %></td>
  </tr>
  <tr>
    <th><%= f.label :sort_no %></th>
    <td><%= f.text_field :sort_no, class: 'number' %></td>
  </tr>
</table>

<p class="form">ページ設定</p>

<table class="show">
  <%= concept_and_layout_form f, more: true %>
</table>

<p class="form">組織情報</p>

<table class="show">
  <tr>
    <th><%= f.label :outline %></th>
    <td class="cke_editor_wrapper">
      <%= f.text_area :outline, class: 'body ckeditor' %>
    </td>
  </tr>
  <tr>
    <th><%= f.label :business_outline %></th>
    <td class="cke_editor_wrapper">
      <%= f.text_area :business_outline, class: 'body ckeditor' %>
    </td>
  </tr>
  <tr>
    <th><%= f.label :contact_information %></th>
    <td class="cke_editor_wrapper">
      <%= f.text_area :contact_information, class: 'body ckeditor' %>
    </td>
  </tr>
</table>

<%= creator_form f %>
