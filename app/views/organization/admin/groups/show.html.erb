<%= init_ckeditor readOnly: true %>
<p class="form">基本情報</p>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :state %></th>
    <td><%= @item.state_text %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :name %></th>
    <td><%= @item.name %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :title %></th>
    <td><%= @item.title %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :sitemap_state %></th>
    <td><%= @item.sitemap_state_text %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :docs_order %></th>
    <td><%= @item.docs_order_text %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :sort_no %></th>
    <td><%= @item.sort_no %></td>
  </tr>
</table>

<p class="form">ページ設定</p>

<table class="show">
  <%= concept_view @item, container: :tr %>
  <%= layout_view @item, container: :tr, more: true %>
</table>

<p class="form">組織情報</p>

<table class="show">
  <tr>
    <th><%= @item.class.human_attribute_name :outline %></th>
    <td class="cke_editor_wrapper"><%= text_area_tag :outline, @item.outline, class: 'ckeditor' %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :business_outline %></th>
    <td class="cke_editor_wrapper"><%= text_area_tag :business_outline, @item.business_outline, class: 'ckeditor' %></td>
  </tr>
  <tr>
    <th><%= @item.class.human_attribute_name :contact_information %></th>
    <td class="cke_editor_wrapper"><%= text_area_tag :contact_information, @item.contact_information, class: 'ckeditor' %></td>
  </tr>
</table>

<%= creator_view @item %>
